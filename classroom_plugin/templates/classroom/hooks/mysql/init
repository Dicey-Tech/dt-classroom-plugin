mysql -u {{ MYSQL_ROOT_USERNAME }} --password="{{ MYSQL_ROOT_PASSWORD }}" --host "{{ MYSQL_HOST }}" --port {{ MYSQL_PORT }} -e 'GRANT ALL ON {{ CLASSROOM_MYSQL_DATABASE }}.* TO "{{ CLASSROOM_MYSQL_USERNAME }}"@"%" IDENTIFIED BY "{{ CLASSROOM_MYSQL_PASSWORD }}";'